{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true, // Cambiado a true
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node", // O "Bundler" si usas Vite 5+
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Esto soluciona los errores de JSX IntrinsicElements
    "types": ["vite/client"] // Esto soluciona el error de import.meta.env
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
